<Window x:Class="SneakersStore.Cards.DiscountCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SneakersStore.Cards"
        mc:Ignorable="d"
        Title="DiscountCard" MinHeight="300" MinWidth="300" MaxHeight="500" MaxWidth="400">
    <Grid Background="#F5F5F5">
        <StackPanel Margin="50,30,50,10">
            <Label Content="Название скидки" />
            <TextBox x:Name="Name" Width="300"/>
            <Label Content="Номинал скидки" />
            <TextBox x:Name="Value" Width="300" />


            <Button Content="Сохранить" 
            Style="{StaticResource ButtonStyle}"
            Width="270" Height="34"
            Click="SaveButton_Click"
            Margin="0 40 0 0"/>


        </StackPanel>

    </Grid>
</Window>
