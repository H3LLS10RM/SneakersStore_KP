<Window x:Class="SneakersStore.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SneakersStore.Windows"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800" >
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Source="/Pages/MenuPage.xaml" Grid.ColumnSpan="3" Grid.RowSpan="3"/>

        <Image  Source="/Images/logo.png" 
                
                Margin="0,10,0,0" 
                Width="Auto" Height="Auto" 
                VerticalAlignment="Top"/>
    </Grid>

</Window>
